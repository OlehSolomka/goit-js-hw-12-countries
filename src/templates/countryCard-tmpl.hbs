{{#each this}}
  <h1 class='header'>{{this.name}}</h1>
  <div class='card-container'>
    <div class='card-label'>
      <h2 class='capital'>Capital:</h2>
      <span>{{capital}}</span>
      <h2 class='population'>Popularion:</h2>
      <span>{{population}}</span>
      <h2 class='country-languages'>Languages:</h2>
      <ul class='list'>
        {{#each this.languages}}
          <li class='list-item'>{{this.name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class='flag-wrapper'>
      <img src='{{this.flag}}' alt='{{name}}' class='flag-img' />
    </div>
  </div>
{{/each}}